<h2 class="page-header">Search Book</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Published After</label>
            <!-- in _form_fields(books) we had to convert the variable into ISO string to read the date because it came in a different format than we wanted,
            but since we're posting and getting the exact same data from the server without hitting the database first, 
            we can just use this variable without converting it-->
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
        </div>
        <div class="form-item">
            <label>Published Before</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<%- include('../partials/bookGrid', { books: books, large: true }) %>